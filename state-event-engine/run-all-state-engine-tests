           rcv-rst-time-wait/rcv-rst-time-wait-right-edge-secure-ipv6 \
           rcv-rst-time-wait/rcv-rst-time-wait-outside-right-secure-ipv4 \
           rcv-rst-time-wait/rcv-rst-time-wait-outside-right-secure-ipv6 \
           rcv-rst-last-ack/rcv-rst-last-ack-outside-left-secure-ipv4 \
           rcv-rst-last-ack/rcv-rst-last-ack-outside-left-secure-ipv6 \
           rcv-rst-last-ack/rcv-rst-last-ack-left-edge-secure-ipv4 \
           rcv-rst-last-ack/rcv-rst-last-ack-left-edge-secure-ipv6 \
           rcv-rst-last-ack/rcv-rst-last-ack-right-edge-secure-ipv4 \
           rcv-rst-last-ack/rcv-rst-last-ack-right-edge-secure-ipv6 \
           rcv-rst-last-ack/rcv-rst-last-ack-outside-right-secure-ipv4 \
           rcv-rst-last-ack/rcv-rst-last-ack-outside-right-secure-ipv6 \
           rcv-rst-closed/rcv-rst-closed-insecure-ipv4 \
           rcv-rst-closed/rcv-rst-closed-insecure-ipv6 \
           rcv-rst-listen/rcv-rst-listen-insecure-ipv4 \
           rcv-rst-listen/rcv-rst-listen-insecure-ipv6 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-listen-outside-left-insecure-ipv4 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-listen-outside-left-insecure-ipv6 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-listen-left-edge-insecure-ipv4 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-listen-left-edge-insecure-ipv6 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-listen-right-edge-insecure-ipv4 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-listen-right-edge-insecure-ipv6 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-listen-outside-right-insecure-ipv4 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-listen-outside-right-insecure-ipv6 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-syn-sent-outside-left-insecure-ipv4 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-syn-sent-outside-left-insecure-ipv6 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-syn-sent-left-edge-insecure-ipv4 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-syn-sent-left-edge-insecure-ipv6 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-syn-sent-right-edge-insecure-ipv4 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-syn-sent-right-edge-insecure-ipv6 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-syn-sent-outside-right-insecure-ipv4 \
           rcv-rst-syn-rcvd/rcv-rst-syn-rcvd-via-syn-sent-outside-right-insecure-ipv6 \
           rcv-rst-established/rcv-rst-established-outside-left-insecure-ipv4 \
           rcv-rst-established/rcv-rst-established-outside-left-insecure-ipv6 \
           rcv-rst-established/rcv-rst-established-left-edge-insecure-ipv4 \
           rcv-rst-established/rcv-rst-established-left-edge-insecure-ipv6 \
           rcv-rst-established/rcv-rst-established-right-edge-insecure-ipv4 \
           rcv-rst-established/rcv-rst-established-right-edge-insecure-ipv6 \
           rcv-rst-established/rcv-rst-established-outside-right-insecure-ipv4 \
           rcv-rst-established/rcv-rst-established-outside-right-insecure-ipv6 \
           rcv-rst-fin-wait-1/rcv-rst-fin-wait-1-outside-left-insecure-ipv4 \
           rcv-rst-fin-wait-1/rcv-rst-fin-wait-1-outside-left-insecure-ipv6 \
           rcv-rst-fin-wait-1/rcv-rst-fin-wait-1-left-edge-insecure-ipv4 \
           rcv-rst-fin-wait-1/rcv-rst-fin-wait-1-left-edge-insecure-ipv6 \
           rcv-rst-fin-wait-1/rcv-rst-fin-wait-1-right-edge-insecure-ipv4 \
           rcv-rst-fin-wait-1/rcv-rst-fin-wait-1-right-edge-insecure-ipv6 \
           rcv-rst-fin-wait-1/rcv-rst-fin-wait-1-outside-right-insecure-ipv4 \
           rcv-rst-fin-wait-1/rcv-rst-fin-wait-1-outside-right-insecure-ipv6 \
           rcv-rst-fin-wait-2/rcv-rst-fin-wait-2-outside-left-insecure-ipv4 \
           rcv-rst-fin-wait-2/rcv-rst-fin-wait-2-outside-left-insecure-ipv6 \
           rcv-rst-fin-wait-2/rcv-rst-fin-wait-2-left-edge-insecure-ipv4 \
           rcv-rst-fin-wait-2/rcv-rst-fin-wait-2-left-edge-insecure-ipv6 \
           rcv-rst-fin-wait-2/rcv-rst-fin-wait-2-right-edge-insecure-ipv4 \
           rcv-rst-fin-wait-2/rcv-rst-fin-wait-2-right-edge-insecure-ipv6 \
           rcv-rst-fin-wait-2/rcv-rst-fin-wait-2-outside-right-insecure-ipv4 \
           rcv-rst-fin-wait-2/rcv-rst-fin-wait-2-outside-right-insecure-ipv6 \
           rcv-rst-close-wait/rcv-rst-close-wait-outside-left-insecure-ipv4 \
           rcv-rst-close-wait/rcv-rst-close-wait-outside-left-insecure-ipv6 \
           rcv-rst-close-wait/rcv-rst-close-wait-left-edge-insecure-ipv4 \
           rcv-rst-close-wait/rcv-rst-close-wait-left-edge-insecure-ipv6 \
           rcv-rst-close-wait/rcv-rst-close-wait-right-edge-insecure-ipv4 \
           rcv-rst-close-wait/rcv-rst-close-wait-right-edge-insecure-ipv6 \
           rcv-rst-close-wait/rcv-rst-close-wait-outside-right-insecure-ipv4 \
           rcv-rst-close-wait/rcv-rst-close-wait-outside-right-insecure-ipv6 \
           rcv-rst-closing/rcv-rst-closing-outside-left-insecure-ipv4 \
           rcv-rst-closing/rcv-rst-closing-outside-left-insecure-ipv6 \
           rcv-rst-closing/rcv-rst-closing-left-edge-insecure-ipv4 \
           rcv-rst-closing/rcv-rst-closing-left-edge-insecure-ipv6 \
           rcv-rst-closing/rcv-rst-closing-right-edge-insecure-ipv4 \
           rcv-rst-closing/rcv-rst-closing-right-edge-insecure-ipv6 \
           rcv-rst-closing/rcv-rst-closing-outside-right-insecure-ipv4 \
           rcv-rst-closing/rcv-rst-closing-outside-right-insecure-ipv6 \
           rcv-rst-time-wait/rcv-rst-time-wait-outside-left-insecure-ipv4 \
           rcv-rst-time-wait/rcv-rst-time-wait-outside-left-insecure-ipv6 \
           rcv-rst-time-wait/rcv-rst-time-wait-left-edge-insecure-ipv4 \
           rcv-rst-time-wait/rcv-rst-time-wait-left-edge-insecure-ipv6 \
           rcv-rst-time-wait/rcv-rst-time-wait-right-edge-insecure-ipv4 \
           rcv-rst-time-wait/rcv-rst-time-wait-right-edge-insecure-ipv6 \
           rcv-rst-time-wait/rcv-rst-time-wait-outside-right-insecure-ipv4 \
           rcv-rst-time-wait/rcv-rst-time-wait-outside-right-insecure-ipv6 \
           rcv-rst-last-ack/rcv-rst-last-ack-outside-left-insecure-ipv4 \
           rcv-rst-last-ack/rcv-rst-last-ack-outside-left-insecure-ipv6 \
           rcv-rst-last-ack/rcv-rst-last-ack-left-edge-insecure-ipv4 \
           rcv-rst-last-ack/rcv-rst-last-ack-left-edge-insecure-ipv6 \
           rcv-rst-last-ack/rcv-rst-last-ack-right-edge-insecure-ipv4 \
           rcv-rst-last-ack/rcv-rst-last-ack-right-edge-insecure-ipv6 \
           rcv-rst-last-ack/rcv-rst-last-ack-outside-right-insecure-ipv4 \
           rcv-rst-last-ack/rcv-rst-last-ack-outside-right-insecure-ipv6"

rootdir=`/usr/bin/dirname $0`
passed=0
failed=0
run=0
skipped=0
timedout=0
killed=0
first=1

printf "Name                                                                    Verdict\n"
printf "===============================================================================\n"
for testcase in $testcases
do
  printf "%-68.68s " `/usr/bin/basename $testcase`
  if [ $first -eq 0 ] ; then
    if [ $delay -ne 0 ] ; then
      if [ -t 1 ] ; then
        printf "\033[33m%10s\033[0m" "WAITING"
      fi
      sleep $delay
      if [ -t 1 ] ; then
        printf "\b\b\b\b\b\b\b\b\b\b"
      fi
    fi
  else
    first=0
  fi
  if [ -t 1 ] ; then
    printf "\033[33m%10s\033[0m" "RUNNING"
  fi
  if [ -f ${rootdir}/${testcase}.pkt ] ; then
    timeout $timelimit $packetdrill --bind_port=6969 ${rootdir}/${testcase}.pkt >/dev/null 2>${rootdir}/${testcase}.out
    result=$?
    found=1
  else
    found=0
  fi
  if [ -t 1 ] ; then
    printf "\b\b\b\b\b\b\b\b\b\b"
  fi
  if [ $found -eq 1 ] ; then
    case $result in
      0)
         passed=`expr $passed + 1`
         if [ -t 1 ] ; then
           printf "\033[32m%10s\033[0m\n" "PASSED"
         else
           printf "%10s\n" "PASSED"
         fi
         ;;
      1)
         failed=`expr $failed + 1`
         if [ -t 1 ] ; then
           printf "\033[31m%10s\033[0m\n" "FAILED"
         else
           printf "%10s\n" "FAILED"
         fi
         ;;
      124)
         timedout=`expr $timedout + 1`
         if [ -t 1 ] ; then
           printf "\033[35m%10s\033[0m\n" "TIMEDOUT"
         else
           printf "%10s\n" "TIMEDOUT"
         fi
         ;;
      129|1[345]?|16[01])
         killed=`expr $killed + 1`
         if [ -t 1 ] ; then
           printf "\033[30m%10s\033[0m\n" "KILLED(`expr $result - 128`)"
         else
           printf "%10s\n" "KILLED(`expr $result - 128`)"
         fi
         ;;
      *)
         if [ -t 1 ] ; then
           printf "\033[36m%10s\033[0m\n" "UNKNOWN"
         else
           printf "%10s\n" "UNKNOWN"
         fi
         ;;
    esac
    run=`expr $run + 1`
  else
    if [ -t 1 ] ; then
      printf "\033[34m%10s\033[0m\n" "SKIPPED"
    else
      printf "%10s\n" "SKIPPED"
    fi
    skipped=`expr $skipped + 1`
  fi
done
printf "===============================================================================\n"
printf "Summary: Number of tests run:       %3u\n" $run
printf "         Number of tests passed:    %3u\n" $passed
printf "         Number of tests failed:    %3u\n" $failed
printf "         Number of tests timed out: %3u\n" $timedout
printf "         Number of tests skipped:   %3u\n" $skipped
if [ $killed -gt 0 ] ; then
  printf "         Number of tests killed:    %3u\n" $killed
fi
